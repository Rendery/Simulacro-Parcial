#include <iostream>
#include <conio.h>
using namespace std;

int main()
{
	int a;
	cout << "ingrese el lado del cuadrado: " << endl;
	cin >> a;
	for (int i=1; i <= a; i++)
	{
		for (int k = 1; k <= a; k++)
		{
			if ((k == 1) || (k == a) || (i == k) || (i == 1) || (i == a))
			{
				cout << "* ";
			}
			else
			{
				cout << "  ";
			}
		}
		cout << endl;
	}
	_getch();
}
